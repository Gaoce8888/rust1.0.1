{
  "name": "kefu-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 6005",
    "build": "vite build",
    "preview": "vite preview --port 6005",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "vite build --mode analyze",
    "performance-check": "node scripts/performance-check.js",
    "optimize": "npm run performance-check && npm run build",
    "bundle-analyze": "npx vite-bundle-analyzer dist",
    "lighthouse": "npx lighthouse http://localhost:6005 --output=json --output-path=./lighthouse-report.json"
  },
  "dependencies": {
    "@heroui/react": "latest",
    "@iconify/react": "4.1.1",
    "clsx": "^2.1.0",
    "framer-motion": "^12.23.6",
    "fs-extra": "^11.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^2.2.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^30.0.4",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "postcss": "^8.4.32",
    "puppeteer": "^24.14.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "tailwindcss": "^3.4.3",
    "terser": "^5.43.1",
    "vite": "^7.0.5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
